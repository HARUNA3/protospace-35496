<div class="card">
  <%= link_to image_tag( prototype.image, class: :card__img ), prototype_path(prototype.id) %>
  <div class="card__body">
    <%= link_to prototype_path(prototype.id), class: :card__title do %>
      <p><%= prototype.title %></p>
    <% end %>
    <p class="card__summary">
      <%= prototype.catch_copy %>
    </p>
    <%= link_to "/users/#{prototype.user.id}", class: :card__user do %>
      <span>by.</span><%= prototype.user.name %>
    <% end %>
  </div>
</div>